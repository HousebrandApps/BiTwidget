<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/luno_full_widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="8dp">

    <!--You have X BTC-->
    <TextView
        android:id="@+id/luno_widget_text_btc_cash_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <!--1 BTC = Currency Value-->
    <TextView
        android:id="@+id/luno_widget_text_trade_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/click_here"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <!--you have X currency value in BTC value-->
    <TextView
        android:id="@+id/luno_widget_text_your_btc_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</LinearLayout>